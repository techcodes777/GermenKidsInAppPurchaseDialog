<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RestartAppActivity"
    android:gravity="center"
    android:background="@drawable/ic_splash_bg">

    <ImageView
        android:id="@+id/ivInnerImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_splash" />

    <ImageView
        android:id="@+id/ivAboveDialog"
        android:layout_below="@+id/ivInnerImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginTop="-30dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/restart_dialog" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivInnerImg"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/bubble"
        android:gravity="center"
        android:text="Your subscription has been done please restart your application "
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />

    <Button
        android:id="@+id/btnRestartApp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_60sdp"
        android:background="@drawable/restart_app"
        android:text="Restart app"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/bubble"
        android:layout_below="@+id/txtMessage"
        android:textAllCaps="false"
        android:textSize="@dimen/_20ssp"
        />

</RelativeLayout>